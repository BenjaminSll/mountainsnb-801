<div class="container" style="min-height: calc(100vh - 200px);">
  <%= simple_form_for [@mountain, @booking] do |f| %>
      <%= f.input :arrival, label: "Arrival date", as: :date, start_year: Date.today.year, arrival: Date.today + 1, end_year: Date.today.year + 5, order: [:day, :month, :year] %>
      <%= f.input :departure, label: "Departure date", as: :date, start_year: Date.today.year, departure: Date.today.year + 5, order: [:day, :month, :year] %>
      <%= f.submit class: "btn btn-info" %>
  <% end %>
  </div>
</div>
