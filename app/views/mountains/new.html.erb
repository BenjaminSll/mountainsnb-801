<div class="container py-5">
  <h2 class="text-center "></h2>

  <%= simple_form_for(@mountain) do |f| %>
      <%= f.input :name, label: "The name of your mountain ?" %>
      <div class="d-flex justify-content-between">
        <%= f.input :range, placeholder: "Your mountain's range" %>
        <%= f.input :location, label: "Country", placeholder: " Mountain's country"%>
      </div>
      <%#= f.input :terrain, collection: Mountain::TERRAIN %>


      <div class="category-wrapper">
        <div class="filter-btn category-item" data-children-count="1">
          <input type="radio" value="rock" name="mountain[terrain]" id="terrain_rock" class="category-selector form-check-input radio_buttons required">
          <label class="form-check-label collection_radio_buttons" for="terrain_rock" >
            <p>Rock</p>
          </label>
        </div>
        <div class="filter-btn category-item" data-children-count="1">
          <input type="radio" value="ice" name="mountain[terrain]" id="terrain_ice" class="category-selector form-check-input radio_buttons required">
          <label class="form-check-label collection_radio_buttons" for="terrain_ice" >
            <p>Ice</p>
          </label>
        </div>
        <div class="filter-btn category-item" data-children-count="1">
          <input type="radio" value="forest" name="mountain[terrain]" id="terrain_forest" class="category-selector form-check-input radio_buttons required">
          <label class="form-check-label collection_radio_buttons" for="terrain_forest" >
            <p>Forest</p>
          </label>
        </div>
      </div>


      <div class="d-flex justify-content-between">
        <%= f.input :height, label: "Height (in meters)" %>
        <%= f.input :trails, input_html: { min: '0' }, label: "How many trails ?", placeholder: "number of hiking trails " %>
      </div>
      <%= f.input :difficulty, collection: Mountain::DIFFICULTY, label: "better suited for..." %>
      <div class="d-flex justify-content-between">
        <%= f.input :price, input_html: { min: '0' }, max_width: "42%"%>
        <%= f.input :photo, as: :file %>
      </div>
      <input class="w-100 mt-3 py-2" type="submit" name="commit" value="Create Mountain" data-disable-with="Create Mountain">
    <% end %>
</div>
