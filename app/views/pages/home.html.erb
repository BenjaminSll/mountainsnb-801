<% images = [ "https://source.unsplash.com/collection/1705422/random","https://source.unsplash.com/collection/1705422/random""https://source.unsplash.com/collection/1705422/random""https://source.unsplash.com/collection/1705422/random""https://source.unsplash.com/collection/1705422/random""https://source.unsplash.com/collection/1705422/random" ]%>



<div class="hp-container">

  <button type="button" class= "btn btn-primary">
    <%= link_to 'Add your mountain', new_mountain_path %>
  </button>

  <div class="mountains_list">
      <% @mountains.each do |mountain| %>
        <div class="item">
          <%= link_to mountain_path(mountain) do %>
            <div class="item-image">
              <img src="<%= mountain.photo_url %>">
            </div>
            <div class="item-text">
              <h4><%= mountain.name %></h4>
              <p>located in:</p>
              <p><%= mountain.range.upcase %></p>
              <p><%= mountain.height&.floor %> meters</p>
              <small><%= mountain.price.floor %>$</small>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
